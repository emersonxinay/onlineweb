<div class="continer align-content-center">
  <div class="row">
    <div class="col">
      <div class="m-5">
        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>

        <p>
          <strong>Photo:</strong>

          <%= image_tag(@product.photo.url) %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @product.price %>

        </p>

        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @product.category.name %>
        </p>

        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>

      </div>

    </div>
  </div>
</div>
