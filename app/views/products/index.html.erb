<div class="product">
  <p id="notice"><%= notice %></p>


  <h1>Products</h1>

  <table class="table table-responsive-auto table-sm">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Photo</th>
        <th scope="col">Price</th>
        <th scope="col">Description</th>
        <th scope="col">Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody >
      <% @products.each do |product| %>
        <tr>

          <td><%= product.name %></td>
          <td><%= link_to image_tag(product.photo.url(:thumb)), product if product.photo.present? %></td>
          <td><%= number_to_currency(product.price,  unit: "CLP ", precision: 3, separator: ",", delimiter: ",")%></td>
          <td><%= product.description %></td>
          <td><%= product.category.name %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= number_to_currency(100) %>


  <br>
  <%= link_to 'New Product', new_product_path %>

</div>
