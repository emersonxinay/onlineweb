
<div class="container">
  <div class="row">
    <div class="col col-sm-12 col-md-12 col-lg-6">
      <div class="d-flex justify-content-center h-100">
        <div class="card margin-fluid card-registro">
          <div class="card-header">
            <h2 class="text-center">Log In  <i class="fa fa-users fa-lg"></i></h2>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <%= f.label :email, class: "text-success" %>
                    <div class="col">
                    <%= f.email_field :email, class: 'form-control', placeholder: 'ingresa tu email.com' %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label :password, class: "text-success"  %>
                    <div class="col">
                      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Ingresa tu Password' %>
                    </div>
                  </div>

                  <% if devise_mapping.rememberable? -%>
                    <div class="form-check">
                      <%= f.label :remember_me, class: 'form-check-label text-success' do %>
                        <%= f.check_box :remember_me, class: 'form-check-input' %>
                        Remember me
                      <% end %>
                    </div>
                  <% end -%>

                  <div class="actions">
                    <%= f.submit "Log in", class: 'btn btn-success' %>
                  </div>
                  <% end %>

                  <%= render "devise/shared/links" %>

                </div>
               </div>

            </div>

          </div>
          <div class="col col-sm-12 col-md-12 col-lg-6">
            <div class="d-flex justify-content-center h-100">
              <div class="card margin-fluid card-registro">
                <div class="card-header">
                  <h2>Ingresa con tu usuario Creado</h2>
                  <%= image_tag("sliderpromos.png", :alt => "sliderpromos.png", class: "d-block w-100") %>
                </div>
                <div class="d-flex justify-content-end social_icon">
                  <h5 class="text-center text-primary">siguenos en nuestras redes</h5>
                  <span><i class="fa fa-facebook-square"></i></span>
                  <span><i class="fa fa-google-plus-square"></i></span>
                  <span><i class="fa fa-twitter-square"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
