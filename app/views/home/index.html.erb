
<h1>Aqui estara los productos con carrito</h1>
  <form action='<%= orders_path %>' name="forname" id="forname_order" method="post" >
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <% @products.each do |product| %>
    <div class="card-deck col col-md">



      <div class="colcard" style="width: 18rem;">
          <img class="card-img-top" alt="Card image cap" <%= image_tag(product.photo.url(:thumb) ) %>
          <div class="card-body">
            <h5 class="card-title"> <%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
          </div>

          <div class="card-body">
            <h3 class="card-text"><%= product.price %></h3>
              <input type="checkbox"  name="products[]" value="<%= product.id %>">
              <button class="btn btn-danger" type="submit" name="button" >Agregar a Carro</button>
          </div>
      </div>


    </div>
      <% end %>

  </form>



